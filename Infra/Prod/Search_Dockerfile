FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 2124
EXPOSE 2125

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["SearchBackend/SearchBackend.csproj", "SearchBackend/"]
RUN dotnet restore "SiteBackend/SearchBackend.csproj"
COPY . .
WORKDIR "/src/SearchBackend"
RUN dotnet build "./SearchBackend.csproj" -c $BUILD_CONFIGURATION -o /app/build \
dotnet ef database update --project YourProject.csproj

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./SearchBackend.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "SearchBackend.dll"]
